<%# <h1>Households#show</h1>
<p>Find me in app/views/households/show.html.erb</p> %>
<div class="household-show pt-2">
  <h1><%= @household.title %>'s house</h1>
  <%= link_to 'edit household', edit_household_path(current_user.household), class: "edit-household-btn" %>
  <div class="members">
    <h2 class="border-top pt-2">Members</h2>
    <div class="household-admin">
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= link_to @household.user.username, user_path(@household.user) %> - admin</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
      </div>
    </div>
    <% @users.each do |user| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= link_to user.username, user_path(user) %></h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="tasks">
    <div class="d-flex justify-content-start">
      <!-- Make the timetable -->
      <%= link_to timetable_household_path(current_user.household), data: { turbo_method: :post, turbo_confirm: "Generate now?" }, class: "btn btn-warning m-3" do %>
        <i class="fa-regular fa-calendar"></i> Build Timetable
      <% end %>
      <!-- Modal Button -->
      <button type="button" class="btn btn-primary m-3" data-toggle="modal" data-target="#taskModal">
        <i class="fa-solid fa-circle-plus"></i> Add Task
      </button>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="taskModal" tabindex="-1" role="dialog" aria-labelledby="taskModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="taskModalLabel">Add New Task</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= render 'tasks/form', task: @task %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <h2 class="border-top pt-2">Tasks</h2>
    <% @tasks.each do |task| %>
      <div class="card-product d-flex align-items-center p-3">
        <img src="https://cdn-icons-png.flaticon.com/512/4345/4345800.png" class="img-fluid" style="width: 50px; height: 50px; margin-right: 15px;" />
        <div class="card-product-infos flex-grow-1">
          <h2><%= task.title %></h2>
          <p><%= task.description %></p>
          <p><%= task.frequency %></p>
        </div>
        <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete task?" }, class: "btn btn-danger" do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

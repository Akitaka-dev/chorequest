<div class="badge-container" data-controller="water-plant">
  <div class="household-show" style="padding-top: 8px; padding-bottom: 4px;">
    <h2 class = "text-center" style="font-family: 'Jersey 20'; font-size: 40px; font-style: normal;">Community garden</h2>
  </div>
  <turbo-frame id="community_garden_frame">
    <div class="garden-page">
      <%= render 'gardens/community_garden', array: @array%>
    </div>
  </turbo-frame>
  <div class="user-show">
    <div class="user-show-container" style="border:none;">
      <div class="user-show-container-badges">
        <h3><strong>Your Flowers</strong></h3>
        <% if current_user.badges.nil? %>
          <p>No plants yet! Come back when you've done more chores!</p>
        <% else %>
          <% @user.badges.each do |badge| %>
            <div class="flower-card" data-water-plant-flower-card-target="flowerCard">



              <% if badge.name == "first-submission" %>
                <img src="<%= asset_path('bud1.png') %>" alt="bud" data-water-plant-target="bud1" style="margin-left: 8px; margin-right: 8px;">
                <img src="<%= asset_path(@inventory_image) %>" alt="flower" data-water-plant-target="flower1" class="d-none" style="margin-left: 8px; margin-right: 8px;">
                <div class="flower-card-infos flex-grow-1">
                  <h2> Welcome! </h2>
                  <p>Your first flower for joining ChoreQuest!</p>
                </div>

                <div style="background-color: #FFCD20; padding-left: 8px; padding-right: 8px; border-top-right-radius: 16px; border-bottom-right-radius: 16px; margin-top: 0px; margin-bottom: 0px;">
                  <%= link_to water_path, class: "", style:"border: none; font-size: 40px; background: none;", data: { action: "click->water-plant#water", turbo_frame: :navbar } do  %>

                  <%= image_tag("water-can.webp", style: "width: 50px; margin-top: 10px;" ) %>
                  <% end %>
                  <div class="text-center">

                    <p style="opacity: 100%; color: black; margin-bottom: 12px; margin-top: 0px; font-family: 'Jersey 20'; font-size: 16px;">-5 <br/>water</p>
                  </div>
                </div>


              <% elsif badge.name == "five-submissions" %>
                <img src="<%= asset_path('bud1.png') %>" alt="bud" data-water-plant-target="bud5" style="margin-left: 8px; margin-right: 8px;">
                <img src="<%= asset_path(@inventory_image2) %>" alt="flower" data-water-plant-target="flower5" class="d-none" style="margin-left: 8px; margin-right: 8px;">
                <div class="flower-card-infos flex-grow-1">
                  <h2>Done it!</h2>
                  <p>You completed your first chore!</p>
                </div>


                <div style="background-color: #FFCD20; padding-left: 8px; padding-right: 8px; border-top-right-radius: 16px; border-bottom-right-radius: 16px; margin-top: 0px; margin-bottom: 0px;">
                  <%= link_to water_path, class: "", style:"border: none; font-size: 40px; background: none;", data: { action: "click->water-plant#waterFive", turbo_frame: :navbar } do  %>

                  <%= image_tag("water-can.webp", style: "width: 50px; margin-top: 10px;" ) %>
                  <% end %>
                  <div class="text-center">

                    <p style="opacity: 100%; color: black; margin-bottom: 12px; margin-top: 0px; font-family: 'Jersey 20'; font-size: 16px;">-5<br/>water</p>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

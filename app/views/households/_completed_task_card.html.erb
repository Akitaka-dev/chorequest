<div class="submission-post" >

  <div class="post-top">
    <% if submission.user.photo.attached? %>
      <div class="d-flex">
        <%= cl_image_tag submission.user.photo.key, class: 'img-fluid rounded-circle me-3', alt: 'User Photo', style: 'width: 40px; height: 40px;' %>
        <h5 style="margin: auto 0;"><%= submission.user.username %></h5>
      </div>
    <% else %>
      <div class="d-flex">
        <img src="path/to/default-profile-photo.jpg" class="img-fluid rounded-circle me-3" alt="Default User Photo" style="width: 40px; height: 40px;">
        <h5><%= submission.user.username %></h5>
      </div>
    <% end %>
  </div>

  <% if submission.user.badges.any? %>
    <% most_recent_badge = submission.user.badges.last %>
    <% if most_recent_badge %>
      <div class="d-flex" style="padding: 10px; width: 100%; margin-top: 8px; background-color: #F4F4F4;">
        <div>
          <img src="<%= asset_path('bud1.png') %>" style="width: 80px; height: 60px; object-fit: cover; object-position: bottom;" alt="bud">
        </div>
        <div>
          <h5><%= submission.user.username %> earned a flower:</h5>
          <p style="margin-bottom: 0px;">For completing their chore for the first time</p>
        </div>
      </div>
    <% end %>
  <% end %>



  <div class="post-top">
    <% if submission.user.photo.attached? %>
      <div class="d-flex">
        <%= cl_image_tag submission.user.photo.key, class: 'img-fluid rounded-circle me-3', alt: 'User Photo', style: 'width: 40px; height: 40px;' %>
        <h5 style="margin: auto 0;"><%= submission.user.username %></h5>
      </div>
    <% else %>
      <div class="d-flex">
        <img src="path/to/default-profile-photo.jpg" class="img-fluid rounded-circle me-3" alt="Default User Photo" style="width: 40px; height: 40px;">
        <h5><%= submission.user.username %></h5>
      </div>
    <% end %>
  </div>
  <% if submission.photo.attached? %>
    <%= cl_image_tag submission.photo.key, class: 'img1', alt: 'Submission Photo' %>
  <% else %>
    <div style="width: 100%; height: 100px; background-color: gray;">
      <p style="margin: 0 auto;">No photo available</p>
    </div>
  <% end %>
  <h5 class="post-title"><strong>Chore:</strong> <%= submission.task.title %></h5>
  <p class="post-text">
    <strong>Date:</strong> <%= submission.updated_at.strftime("%d %b %Y %H:%M") %>
  </p>
</div>

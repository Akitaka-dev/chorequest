<h1 class = "text-center">Community garden</h1>
<div class="garden-page">
  <%= render 'gardens/community_garden'%>
</div>

<div class="user-show">
  <div class="user-show-container" style="border:none;">
    <div class="user-show-container-badges">
      <h3><strong>Your Plants</strong></h3>

    <!---Create Cards with User's Flowers---->
    <% @user.badges.each do |badge| %>
      <div class="flower-card">
        <% if badge.name == 'first-submission' %>
          <img src="<%= asset_path('bud1.png') %>" alt="bud">
          <div class="flower-card-infos">
          <h2><%= badge.name %></h2>
          <button type="button" class="btn btn-success m-2">Water this plant</button>
          </div>
        <% elsif badge.name == 'five-submissions' %>
          <img src="<%= asset_path('pink1.png') %>" alt="pink flower">
          <div class="flower-card-infos">
           <h2><%= badge.name %></h2>
            <button type="button" class="btn btn-success m-2">Water this plant</button>
          </div>
        <% else %>
          <img src="<%= asset_path('bud1.png') %>" alt="bud">
          <div class="flower-card-infos">
            <h2><%= badge.name %></h2>
            <button type="button" class="btn btn-success m-2">Water this plant</button>
          </div>
        <% end %>
      </div>
    <% end %>
    <!---Create Cards with User's Flowers END---->

      </div>
    </div>
  </div>

<div class="household-new-style">
  <%= simple_form_for @household do |f| %>
    <div class="form-group mb-3">
      <%= f.label :title, "Household Name", style: "font-weight:bold;" %>
      <%= f.input :title, placeholder: "Enter the household name", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :user_ids, "Add Members", style: "font-weight:bold;" %>
      <input type="text" id="user-search" placeholder="Search for users" class="form-control">
      <div id="user-results" class="mt-2"></div>
      <div id="selected-users" class="mt-2"></div>
    </div>

    <!-- Hidden input to store selected user IDs -->
    <%= f.hidden_field :user_ids, value: current_user.id, id: 'user-ids-field', multiple: true %>

    <div class="form-group" style="display: flex; justify-content: center;">
      <%= f.submit "Create Household", class: "btn btn-primary", style: "border-radius: 32px; border: 1px black solid;" %>
    </div>
  <% end %>
</div>
